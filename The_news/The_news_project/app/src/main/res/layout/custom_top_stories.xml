<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="140dp"
                android:id="@+id/top_stories_root"
    android:background="@android:color/white"
                android:elevation="1.3dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_centerVertical="true"
        android:layout_height="140dp"
        android:id="@+id/top_stories_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:title="Title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/top_stories_title"
        android:layout_toRightOf="@id/top_stories_image"
        android:layout_marginTop="10dp"
        android:maxLines="4"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@mipmap/ic_query_builder_black_24dp"
        android:tint="@color/blue_clock"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/top_stories_image"
        android:id="@+id/clock"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:title="8h ago"
        android:layout_marginBottom="5dp"
        android:textColor="@color/textColor"
        android:id="@+id/top_stories_date"
        android:layout_toRightOf="@id/clock"
        android:layout_marginLeft="6dp"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:background="@color/textColor"
        android:layout_toRightOf="@id/top_stories_date"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:id="@+id/top_stories_divisor"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/top_stories_divisor"
        android:layout_marginRight="15dp"
        android:id="@+id/top_stories_category"
        android:title="Category"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/categoryColor"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_favorite_border_black_24dp"
        android:tint="@color/textColor"
        android:id="@+id/top_stories_heart"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_share_white_24dp"
        android:tint="@color/textColor"
        android:id="@+id/top_stories_share"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"/>


</RelativeLayout>