<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.ivonneortega.the_news_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailView.DetailViewActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".CategoryView.CategoryViewActivity"
            android:label="@string/title_activity_category_view"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".Search.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".DetailView.CollectionDemoActivity"
                  android:label="CollectionDemoActivity"
                  android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>