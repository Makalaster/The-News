<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_view_root"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ivonneortega.the_news_project.DetailView.DetailViewActivity"
    tools:showIn="@layout/activity_detail_view"
    android:background="@color/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:id="@+id/detail_image"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_date"
            android:layout_below="@id/detail_image"
            android:text="DATE"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_title"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_below="@id/detail_date"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="THIS IS THE TITLE OF THE ARTICLE"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_below="@id/detail_title"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:alpha="0.3"
            android:id="@+id/divider"
            android:background="@color/textColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_content"
            android:layout_below="@id/divider"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="sdsdfsdfsdfsdfsdfsdfsdvrrfffrfrfrfrfrfrftgtvdfvsvsdvsdvsvsdvsdvsdvsdvdsvsdvsdv"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
